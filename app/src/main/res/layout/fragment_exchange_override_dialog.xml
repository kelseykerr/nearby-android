<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exchange_override_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Exchange Override"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cancel_exchange_override"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:tint="@color/colorAccent"
        android:src="@drawable/x_svg"/>


        <TextView
            android:id="@+id/exchange_time_label"
            android:layout_width="wrap_content"
            android:layout_below="@id/exchange_override_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Exchange Time"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/exchange_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exchange_time_label"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorAccent"
            android:clickable="true"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/exchange_time_border"
            android:layout_width="292dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/exchange_time">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"/>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/cancel_override_button"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/submit_override_button"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/cancel_override_button"
            android:background="@color/colorPrimary" />


    </RelativeLayout>

</LinearLayout>