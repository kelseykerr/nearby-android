<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:id="@+id/home_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/toolbar_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/new_request_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="0dp"
                android:paddingBottom="10dp"
                android:paddingEnd="25dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp">

                <ImageButton
                    android:id="@+id/new_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:src="@drawable/ic_add_box_black_24dp"
                    android:tint="@color/white" />
            </FrameLayout>

            <TextView
                android:id="@+id/nearby_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="7dp"
                android:contextClickable="true"
                android:drawablePadding="0dp"
                android:drawableStart="@drawable/nearby_logo_2_white"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar_line_2"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_below="@id/toolbar_line_1">

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:onClick="filterRequests"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:text="filter"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:hint="Search..."
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:layout_centerInParent="true"
                android:inputType="textNoSuggestions"
                android:background="@color/white"
                android:imeOptions="actionDone"/>

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/search_bar"
                android:src="@drawable/ic_search_white_24dp"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/list_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:onClick="switchListMapView"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:text="list"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.Toolbar>