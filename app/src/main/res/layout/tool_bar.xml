<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:elevation="4dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/nearby_logo_2_white"
        android:drawablePadding="0dp"
        android:singleLine="true"
        android:contextClickable="true" />

    <FrameLayout
        android:id="@+id/new_request_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="25dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/new_request_button"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:duplicateParentState="true"
        android:clickable="false"
        android:focusable="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_add_box_white_24dp"
        />
    </FrameLayout>

    <TextView
        android:id="@+id/list_map_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:text="list"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:onClick="switchListMapView"
        android:textSize="20sp" />


</android.support.v7.widget.Toolbar>