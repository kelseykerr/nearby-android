<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="layout.AccountFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/account_parent_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- <RelativeLayout
                 android:id="@+id/profile_layout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:elevation="4dp"
                 android:paddingBottom="24dp"> -->

            <ImageButton
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:background="#ffffff" />


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="76dp"
                android:layout_toRightOf="@+id/profileImage"
                android:textColor="#585757"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updateAccount_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/profileImage"
                android:background="#4EE2EC"
                android:padding="10dp"
                android:text="Edit Profile"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/updateAccount_button"
                android:background="#4EE2EC"
                android:padding="10dp"
                android:text="Logout"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/user_home_address_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_city_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_home_address_street"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_city_zip"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_email"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notifications_near_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notifications_near_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifications_near_home"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notifications_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifications_near_me"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notifications_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifications_radius"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#585757"
                android:textSize="14sp" />


        </RelativeLayout>

        <!-- </RelativeLayout> -->
    </ScrollView>

</FrameLayout>