<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/my_history_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/photo_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-1dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <ImageButton
                android:id="@+id/profileImage"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="#00000000" />

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_weight="24"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/title_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-1dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="19"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/card_menu"
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:onClick="showPopup"
                        android:src="@drawable/ic_more_vert_black_24dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_bar"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="0dp"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/category_name"
                    android:layout_marginStart="0dp"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/transaction_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:layout_marginStart="0dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/status_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8">

                        <TextView
                            android:id="@+id/history_card_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/posted_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/open_offers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/response_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_info_layout"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom" />
        </LinearLayout>

        <ListView
            android:id="@+id/response_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/response_separator"
            android:scrollbars="vertical"
            android:visibility="gone">
        </ListView>
    </RelativeLayout>

</android.support.v7.widget.CardView>