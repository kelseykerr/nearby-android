                android:tint="#FFD700"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_swap_horiz_black_24dp" /> -->

            <!--<ImageButton
                android:id="@+id/edit_button"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/parent_list_item_expand_arrow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:tint="@color/colorAccent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mode_edit_black_24dp" /> -->

            <!--<ImageButton
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/exchange_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                android:tint="@color/redPink"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_cancel_black_24dp" /> -->

            <ImageView
                android:id="@+id/card_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:onClick="showPopup"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <ImageButton
                android:id="@+id/parent_list_item_expand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="88dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name"
                android:layout_marginEnd="88dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_name"
                android:layout_marginEnd="88dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/posted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginEnd="88dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/history_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/posted_date"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/response_separator"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_card_status">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom" />
            </LinearLayout>

            <ListView
                android:id="@+id/response_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/response_separator"
                android:scrollbars="vertical"
                android:visibility="gone">

            </ListView>

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>