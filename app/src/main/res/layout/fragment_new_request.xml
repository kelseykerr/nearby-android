<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/colorAccent"
    >

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="New Request"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <Spinner
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/request_type_array"
        android:prompt="@string/request_type_prompt"
        android:id="@+id/request_type"
        android:layout_gravity="left" />

    <Spinner
        android:id="@+id/rental_spinner"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:prompt="@string/radius_spinner_title"/>

    <Spinner
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/request_category_array"
        android:prompt="@string/request_category_prompt"
        android:id="@+id/request_category"
        android:layout_gravity="left" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:hint="name"
        android:id="@+id/request_name"
        android:layout_gravity="left"
        android:maxLength="100"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/mutedGrey" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:hint="description"
        android:id="@+id/request_description"
        android:layout_gravity="left"
        android:maxLength="200"
        android:maxLines="2"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/mutedGrey" />

</LinearLayout>