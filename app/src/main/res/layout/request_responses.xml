<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/response_border_left"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:id="@+id/response_card"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/offer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text=""/>

    <TextView
        android:id="@+id/response_status"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/offer_text"
        android:layout_marginEnd="44dp"
        android:text=" " />

    <ImageButton
        android:id="@+id/message_user_button"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_textsms_black_24dp" />

</RelativeLayout>