<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="@color/colorAccent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_offer_text"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Create Offer"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/cancel_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:background="@color/white"
            android:tint="@color/colorAccent"
            android:src="@drawable/x_svg"/>


        <TextView
            android:id="@+id/money_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cancel_offer"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:text="$" />

        <EditText
            android:id="@+id/offer_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/money_sign"
            android:layout_below="@id/cancel_offer"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:theme="@style/EditTextTheme"
            android:textColor="@color/colorAccent" />

        <Spinner
            android:id="@+id/offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/money_sign"
            android:entries="@array/offer_type_array" />

        <Button
            android:layout_width="match_parent"
            android:layout_below="@id/offer_type"
            android:layout_height="wrap_content"
            android:text="submit offer"
            android:id="@+id/submit_offer_button"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

</LinearLayout>
