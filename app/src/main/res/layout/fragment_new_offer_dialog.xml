<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="@color/colorAccent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:text="cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/money_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cancel_offer"
            android:layout_marginTop="15dp"
            android:text="$" />

        <EditText
            android:id="@+id/offer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/money_sign"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/mutedGrey" />

        <Spinner
            android:id="@+id/offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/request_name"
            android:entries="@array/offer_type_array" />

        <Button
            android:layout_width="match_parent"
            android:layout_below="@id/offer_type"
            android:layout_height="wrap_content"
            android:text="submit offer"
            android:id="@+id/submit_offer_button"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

</LinearLayout>
